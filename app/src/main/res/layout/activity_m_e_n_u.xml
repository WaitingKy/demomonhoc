<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MENU"
    android:background="@color/white"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_gravity="center"></TextView>
        <TextView
            android:id="@+id/monbun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món bún"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"></TextView>

        <ImageButton
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/bun"></ImageButton>

        <TextView
            android:id="@+id/moncom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món cơm"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            ></TextView>

        <ImageButton
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/com"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"></ImageButton>

        <TextView
            android:id="@+id/monpho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món phở"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"></TextView>

        <ImageButton
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:src="@drawable/pho"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"></ImageButton>
    </LinearLayout>
</ScrollView>
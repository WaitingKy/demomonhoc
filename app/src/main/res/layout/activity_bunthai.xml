<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bunthai"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hướng dẫn làm bún Thái"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></TextView>
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bunthai"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"></ImageView>

    <TextView
        android:id="@+id/gachchan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------------------------------------------------------------------"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_below="@+id/image"></TextView>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyên liệu cần chuẩn bị:"
        android:layout_below="@id/gachchan"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"></TextView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Cua đồng"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Măng non"
                android:layout_below="@+id/checkBox1"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Trứng luộc"
                android:layout_below="@+id/checkBox2"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Phồng tôm"
                android:layout_below="@+id/checkBox3"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Hành phi"
                android:layout_below="@+id/checkBox4"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Da heo chiên giòn"
                android:layout_below="@+id/checkBox5"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Bún"
                android:layout_below="@+id/checkBox6"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Nem chua"
                android:layout_below="@+id/checkBox7"></CheckBox>

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Ớt và mắm mêm"
                android:layout_below="@+id/checkBox8"></CheckBox>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Lưu ý: Tuỳ vào nhu cầu dùng hoặc người ăn thì bạn có thể tự ước lượng các thành phần theo tỉ lệ nha!!! mãi yêu)"
                android:layout_below="@id/checkBox9"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="italic"
                ></TextView>
            <Button
                android:id="@+id/batdau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:text="bắt đầu"
                android:layout_centerInParent="true"></Button>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>